<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="@mipmap/draw_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="通行证/人像识别区"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="199****0988"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvInOut"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="进出配置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvChayan"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="查验模式"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTipsLoc"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="证件提示窗口位置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCanshu"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="人脸识别参数配置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="删除本地数据"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvWenan"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="文案配置"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvUploadLog"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="上传日志"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvGotoLuancher"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="返回系统桌面"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvGotoSetting"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="系统设置"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/draw_btn_bg"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="版本V1.1"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_bg2"
        android:gravity="center"
        android:minHeight="36dp"
        android:text="注销登录"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
