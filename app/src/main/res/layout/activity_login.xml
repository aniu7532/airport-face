                    android:id="@+id/buttonCancel"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFFFFF"
                    android:text="取消"
                    android:textColor="#1978E5" />

